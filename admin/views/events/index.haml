.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:events, :index)
      %li=link_to pat(:new), url(:events, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:events)
    .inner
      %table.table
        %tr
          %th.first=mat(:event, :_type)
          %th=mat(:event, :_id)
          %th=mat(:event, :created_at)
          %th=mat(:event, :updated_at)
          %th=mat(:event, :date)
          %th=mat(:event, :month)
          %th=mat(:event, :year)
          %th=mat(:event, :time)
          %th=mat(:event, :name)
          %th=mat(:event, :organizer)
          %th=mat(:event, :description)
          %th=mat(:event, :icon)
          %th=mat(:event, :location)
          %th=mat(:event, :location_url)
          %th=mat(:event, :follow)
          %th.last="&nbsp;"
        -@events.each do |event|
          %tr
            %td.first=event._type
            %td=event._id
            %td=event.created_at
            %td=event.updated_at
            %td=event.date
            %td=event.month
            %td=event.year
            %td=event.time
            %td=event.name
            %td=event.organizer
            %td=event.description
            %td=event.icon
            %td=event.location
            %td=event.location_url
            %td=event.follow
            %td.last
              =button_to pat(:edit), url(:events, :edit, :id => event.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:events, :destroy, :id => event.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
